<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00ff5d"
                />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners
                android:radius="150dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#b22bc4"
                android:endColor="#e20aff"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners
                android:radius="150dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>